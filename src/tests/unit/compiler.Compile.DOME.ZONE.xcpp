#divert <hpp>
#import cppunit.Test
#import cppunit.test.Fixture
namespace tests::unit::compiler {
  template<> class Compile<dome_zone::Source, dome_zone::Destination> : public cppunit::test::Fixture {
  public:
    auto test_simple() -> void;
    static auto suite() -> cppunit::Test *;
  };
