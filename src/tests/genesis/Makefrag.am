check_bin_genesis = check/bin/genesis
check_bin_genesis_LDADD = \
  $(lib_libapp_genesis_la) \
  $(check_lib_libtests_la) \
  -lrigging-bench-module \
  $(end)
$(check_bin_genesis_OBJECTS): AM_CPPFLAGS+=$(AND_CHECK_CPPFLAGS_SET)
$(check_bin_genesis_OBJECTS): AM_CXXFLAGS+=$(AND_CHECK_CXXFLAGS_SET) -Wno-deprecated-declarations
# reminder: autotools does not put $(AM_LDFLAGS) into check_bin_genesis_LDFLAGS, like it does with CPPFLAGS and CXXFLAGS
check_bin_genesis_LDFLAGS = $(CHECK_LDFLAGS_SET)
check_bin_genesis_MODULES = $(call TF_SOURCEStoMODULES, $(check_bin_genesis_SOURCES))
check_bin_genesis_SOURCES = \
  obj/src/tests/genesis/namespace.cpp \
  obj/src/tests/genesis/main.cpp \
  obj/src/tests/genesis/Fixture.cpp \
  $(end)
#
$(scold_cxxdir)/tests/genesis/dependencies.mk: $(check_bin_genesis_SOURCES)
$(check_bin_genesis_SOURCES) : obj/src/%.cpp : src/%.xcpp
	$(TF_V_DIS) $(call TF_XCPP2CPP, $<)
	$(TF_V_DUN) test -e $@
$(scold_cxxdir)/tests/genesis/dependencies.mk:
	$(TF_V_COM) $(call TF_DEPENDENCIES, $^)
	$(TF_V_DUN) test -e $@
include $(scold_cxxdir)/tests/genesis/dependencies.mk
clean-dependencies::
	rm -f $(scold_cxxdir)/tests/genesis/dependencies.mk
